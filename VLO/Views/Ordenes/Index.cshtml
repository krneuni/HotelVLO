<div class="col-lg-4">
    <div class="btn-group btn-group-toggle" data-toggle="buttons">
        <label class="btn btn-default active" onclick="Filter('.all')">
            <input type="radio" name="options" onclick="Filter('.all')" id="option1" autocomplete="off" checked> All
        </label>
        <label class="btn btn-default" onclick="Filter('.Disponible')">
            <input type="radio" name="options" onclick="Filter('.Disponible')" id="option2" autocomplete="off"> Disponibles
        </label>
        <label class="btn btn-default" onclick="Filter('.Ocupada')">
            <input type="radio" name="options" onclick="Filter('.Ocupada')" id="option3" autocomplete="off"> Ocupadas
        </label>
    </div>
</div>
<br />
<br />
<br />
@{

    
        <div class="row col-md-12">
            @foreach (var item in Model)
            {
                var classfilter = "Disponible";
                if (item.Estado)
                {
                    classfilter = "Ocupada";
                }
                <a class="all @classfilter" href="/Ordenes/Menu/@item.IdMesa">
                        <div class="col-md-4">
                            <div class="thumbnail">
                                <div class="caption">
                                    <h3>Mesa @item.NumMesa</h3>
                                </div>
                                <div>
                                    @if (item.Estado == true)
                                    {

                                        <a href="/Ordenes/Menu/@item.IdMesa" class='@(item.Estado==true?"btn btn-success":"btn btn-danger") m-l-10 m-b-10' role="button">@(item.Estado == true ? "Disponible" : "Ocupada")</a>
                                    }
                                    else
                                    {
                                        <a href="/Ordenes/Menu/@item.IdMesa" class='@(item.Estado==true?"btn btn-success":"btn btn-danger") m-l-10 m-b-10' role="button">@(item.Estado == true ? "Disponible" : "Ocupada")</a>
                                    }
                                </div>
                            </div>
                        </div>
                </a>
            }
        </div>
}

