@model VLO.Models.CocinaViewModel
@{
    ViewBag.Title = "Pagos";
}
@{
    int Item = 1;
    var IdOrden = "0";
    //try
    //{
    //    IdOrden = Model.detalle.FirstOrDefault().IdPedido;
    //}
    //catch
    //{
    //    IdOrden = "0";
    //}
    var totalapagar = 0.0;
}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <table class="table table-responsive">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th>Cantidad</th>
                            <th>Precio</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var menu in Model.detalle)
                            {
                                if (menu != null)
                                {
                                   <tr>
                                   @{
                                        var producto = Model.menus.Where(x => x.IdMenu == menu.IdMenu).First();
                                   }
                                        <th class="row">@Item</th>
                                        <td>@producto.Nombre</td>
                                        <td>@menu.Pedido.Estado</td>
                                        <td>@menu.cantidad</td>
                                        <td class="color-primary">@producto.Precio.ToString("C")</td>
                                        <td class="color-primary">@((producto.Precio * menu.cantidad).ToString("C"))</td>
                                         </tr>
                                        Item = Item + 1;
                                        totalapagar += (producto.Precio * menu.cantidad);
                                 }
                            }


                    </tbody>
                    <tfoot>
                </table>
                @*<a class="btn btn-green" href="/Ordenes/OrdenesMeseros?idpedido=@item.IdPedido">Pagar</a>*@
            </div>
        </div>
    </div>
</div>

