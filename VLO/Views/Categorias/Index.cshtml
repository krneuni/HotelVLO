@model IEnumerable<VLO.Models.Categoria>

@{
    ViewBag.Title = "Index";
}

<h2>Categoria de Productos</h2>

<p>
    <a href="@Url.Action("Create","Categorias")" class="btn btn-success"> <i class="glyphicon glyphicon-plus"></i> Nuevo</a>
</p>

<br />
<br />
<div class="row col-md-12" style="margin-top:10px">
    <table class="table table-bordered" style="background-color:#FFF">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.ActionLink(" ", "Delete", new { id = item.IdCategoria }, new { @class = "btn btn-danger glyphicon glyphicon-refresh" })
                    @Html.ActionLink(" ", "Delete", new { id = item.IdCategoria }, new { @class = "btn btn-danger glyphicon glyphicon-trash" })
                </td>
            </tr>
        }

    </table>
</div>