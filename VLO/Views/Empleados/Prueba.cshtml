        $("#DeleteConfirmation").modal("show");
    }
    var ConfirmDelete = function () {
        var Id = $("#IdEmp").val();
        $.ajax({
            type: "POST",
            url: "/Empleados/DeleteEmpleadoRecord?IdEmpleado=" + Id,
