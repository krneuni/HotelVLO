@model VLO.Models.EmpleadoViewModel
@{
    Layout = null;
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />

<div class="container" style="margin-top:3%">
    <a href="#" class="btn btn-info" onclick="Create(0)">Agregar Empleado</a> <br /><br />

    <table class="table table-striped">
        <thead>
            <tr>
                
                <th>Nombre Empleado</th>
                <th>Apellido</th>
                <th>Dui</th>
                <th>Edad</th>
                <th>Telefono</th>
                <th>Direccion</th>
                <th>Mail</th>
                <th>Cargo</th>
                <th>Salario</th>
                <th>Estado</th>
                <th>Genero</th>
                <th></th>

            </tr>
        </thead>
        <tbody id="EmpleadoList">            
            <tr id="Cargando" style="color:red"></tr>
        </tbody>
    </table>

    @*Create A Popup Modal With Registration Form For Add Or Edit Student Record*@

    <div class="modal fade" id="MyModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4 id="ModalTitle"></h4>
                </div>
                <div class="modal-body">
                    <form id="form">
                        <fieldset id="SubmitForm">
                            @Html.HiddenFor(m => m.IdEmpleado, new { @id = "EmpleadoId" })
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Nombre, new { @id = "Nombre", @class = "form-control", @placeholder = "Nombre*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Apellido, new { @id = "Apellido", @class = "form-control", @placeholder = "Apellido*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Dui, new { @id = "Dui", @class = "form-control", @placeholder = "Dui*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Edad, new { @id = "Edad", @class = "form-control", @placeholder = "Edad*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Telefono, new { @id = "Telefono", @class = "form-control", @placeholder = "Telefono*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Direccion, new { @id = "Direccion", @class = "form-control", @placeholder = "Direccion*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Mail, new { @id = "Mail", @class = "form-control", @placeholder = "Email*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Cargo, new { @id = "Cargo", @class = "form-control", @placeholder = "Cargo*" })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Salario, new { @id = "Salario", @class = "form-control", @placeholder = "Salario*" })
                            </div>
                            <div class="form-group">
                                Estado:
                                @Html.EditorFor(model => model.Estado, new { @id = "Estado", @class = "form-control" })
                            </div>
                            <div class="form-group">
                                @Html.DropDownListFor(m => m.IdGenero, ViewBag.ListadeGenero as SelectList, "--Seleccionar Genero--", new { @id = "DropDwn", @class = "form-control" })
                            </div>
                                <div class="form-group">
                                    <a href="#" class="btn btn-block btn-danger" id="SaveEmpleadoRecord">Guardar</a>
                                </div>

                        </fieldset>
                    </form>
                </div>
            </div>
        </div>
    </div>

    @*Create A PopUp Modal For DeleteConfirmation*@

    <div class="modal fade" id="DeleteConfirmation">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <a href="#" class="close" data-dismiss="modal">&times;</a>
                    <h4>Eliminar Registro</h4>
                </div>
                <div class="modal-body">
                    <h4>¿Estás seguro que quieres eliminar esto?</h4>
                </div>
                <div class="modal-footer">
                    <a href="#" class="btn btn-primary" data-dismiss="modal" id="r">Cancelar</a>
                    <a href="#" class="btn btn-danger" onclick="ConfirmDelete()">Confirmar</a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#Cargando").html("Cargando....");
    $.get("/Empleados/GetEmpleadoList", null, DataBind);
    function DataBind(EmpleadoList) {
        var SetData = $("#SetEmpleadoList");
        for (var i = 0; i < EmpleadoList.length; i++) {

            var Data = "<tr class='row_" + EmpleadoList[i].IdEmpleado + "'>" +
                "<td>" + EmpleadoList[i].Nombre + "</td>" +
                "<td>" + EmpleadoList[i].Apellido + "</td>" +
                "<td>" + EmpleadoList[i].Dui + "</td>" +
                "<td>" + EmpleadoList[i].Edad + "</td>" +
                "<td>" + EmpleadoList[i].Telefono + "</td>" +
                "<td>" + EmpleadoList[i].Direccion + "</td>" +
                "<td>" + EmpleadoList[i].Mail + "</td>" +
                "<td>" + EmpleadoList[i].Cargo + "</td>" +
                "<td>" + EmpleadoList[i].Salario + "</td>" +
                "<td>" + EmpleadoList[i].Estado + "</td>" +
                "<td>" + EmpleadoList[i].Genero + "</td>" +
                "<td>" + "<a href='#' class='btn btn-warning' onclick='EditEmpleadoRecord(" + EmpleadoList[i].IdEmpleado + ")' ><span class='glyphicon glyphicon-edit'></span></a>" + "</td>" +
                "<td>" + "<a href='#' class='btn btn-danger' onclick='DeleteEmpleadoRecord(" + EmpleadoList[i].IdEmpleado + ")'><span class='glyphicon glyphicon-trash'></span></a>" + "</td>" +
                "</tr>";
            //document.documentElement.innerHTML = Data;
            $("#EmpleadoList").append(Data);
            $("#Cargando").html(" ");

        }
    }

    //Show The Popup Modal para Nuevo Empleado

    function Create(IdEmpleado) {
        $("#form")[0].reset();
        $("#IdEmpleado").val(0);
        $("#DropDwn option:selected").text("--Seleccionar Genero--");
        $("#ModalTitle").html("Nuevo Empleado");
        $("#MyModal").modal();

    }

